extends layout

block content
  h1= title

  if verificacao
    div(style="color: green; font-weight: bold; margin-bottom: 1rem")
      | #{message}
  else if verificacao === false
    div(style="color: red; font-weight: bold; margin-bottom: 1rem")
      | #{message}

  form(action="/postagem" method="POST")
    div
      label(for="vtitulo") Título:
      input(type="text", name="vtitulo", required, placeholder="Digite o título da postagem")

    div
      label(for="vdescricao") Descrição:
      textarea(name="vdescricao", rows="5", required placeholder="Digite a descrição")

    div
      label(for="vemail") E-mail do Usuário:
      input(type="email", name="vemail", required, placeholder="Digite o e-mail do usuário")

    div
      button(type="submit") Cadastrar Postagem

  br
  a(href="/") Voltar para o início