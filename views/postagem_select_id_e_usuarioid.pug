extends layout

block content
  .container.mt-5
    h1.mb-4.text-center Postagem Detalhada

    if verificacao
      .card.shadow-sm.mb-4
        .card-body
          h2.card-title.mb-3= posts.titulo

          p
            strong Descrição:
            |  #{posts.descricao}

          p
            strong Data de Cadastro:
            |  #{new Date(posts.dt_cadastro).toLocaleString()}

          p
            strong Ativo:
            |  #{posts.ativo ? 'Sim' : 'Não'}

          p
            strong Código do Usuário:
            |  #{posts.cod_usuario}

        .card-footer.text-end.bg-transparent.border-0
          a.btn.btn-secondary(href="/") Voltar

      h3.mt-5.mb-3.text-center Comentários

      if commits && commits.length > 0
        each comentario in commits
          .card.mb-3.shadow-sm
            .card-body
              p.mb-1
                strong Autor:
                |  #{comentario.nome}
              p.mb-1
                strong Comentário:
                |  #{comentario.texto}
              p.text-muted.small.mb-0
                | Enviado em #{new Date(comentario.dt_comentario).toLocaleString()}
      else
        .alert.alert-info.text-center Nenhum comentário encontrado para esta postagem.

      // Formulário para novo comentário
      .card.mb-3.shadow-sm
        .card-body
          h5.mb-3 Deixe seu comentário          
          form(action="/comentario/usuario/#{userId}/postagem/#{posts.id}", method="POST")
            .mb-3
              label(for="comentario") Comentário:
              textarea.form-control(name="comentario", id="comentario", rows="4", required placeholder="Escreva seu comentário aqui")

            button.btn.btn-primary(type="submit") Comentar

    else
      .alert.alert-warning.text-center
        p Nenhuma postagem encontrada com o ID fornecido.

      .text-center.mt-3
        a.btn.btn-outline-primary(href=`/usuario/${userId}`) Voltar